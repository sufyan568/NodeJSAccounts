<h3>
{{viewTitle}}
{{log post.fullName}}
</h3>
<form method="POST" action="/post/update" autocomplete="form">
<input type="hidden" name="id" value="{{post.id}}" class="form-control">
<div class="form-group">
<label> Full Name</label>
<input type="text" class="form-control" name="fullName" value="{{post.fullName}}" placeholder ="Full Name">

</div>


<div class="form-group">
<label>Email</label>
<input type="text" class="form-control" name="email" placeholder ="email" value="{{post.email}}">

</div>



<div class="form-group">
<div class="row">
<div class="col-md-6">

<label>Mobile</label>
<input type="text" class="form-control" name="mobile" placeholder ="Mobile" value="{{post.mobile}}">
</div>
<div class="col-md-6">

<label>City</label>
<input type="text" class="form-control" name="city" placeholder ="City" value="{{post.city}}">

</div>
</div>
</div>
<div class="form-group mt-2">
<button class="btn btn-primary" type="submit" value="submit"> <i class="fa fa-database"> </i>&nbsp; Submit </button>
<a class="btn btn-secondary" href="/post/index" type="button" > <i class="fa fa-list-alt"> </i>&nbsp; View All </a>
</div>
</form>
